<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/main2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <TextView
            android:fontFamily="@font/gowunbatangregular"
            android:text="안내문구"
            android:id="@+id/noti2"
            android:padding="50px"
            android:textSize="20pt"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:fontFamily="@font/gowunbatangregular"
            android:text="오늘은 1000번 퀴즈를 풀었고"
            android:id="@+id/rangeOfChange1"
            android:textSize="12pt"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_marginTop="30px"
            android:fontFamily="@font/gowunbatangregular"
            android:text="평균 10개의 단어를 맞추셨습니다."
            android:id="@+id/rangeOfChange2"
            android:textSize="12pt"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <Button
            android:fontFamily="@font/gowunbatangregular"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:id="@+id/recall2"
            android:text="돌아가기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </Button>
    </LinearLayout>
    <TextView
        android:textAlignment="center"
        android:textSize="12pt"
        android:fontFamily="@font/gowunbatangregular"
        android:text="오늘 틀린단어"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>